<% meta_tag :description, "Розклад занять СумДУ, КПІ" %>
<% meta_tag :keywords, "Розклад,СумДУ,КПІ" %>
<% @title = "Мій Університет - Розклад СумДУ, КПІ" %>

<%= render "layouts/header" %>

<div class="container">

  <div class="row">
    <div class="mx-auto col-md-8">
      <h1 class="mb-4">Університети</h1>
      <% @universities.each do |university| %>
      <div class="row mb-3">
        <div class="col">
          <div class="card">
            <div class="card-header">
              <div class="media">
                <%= render "universities/university_picture", university: university %>
                <div class="media-body">
                  <h1 display-3 class="mt-0"><%= university.short_name %></h1>
                  <h6 class="card-subtitle mb-2 Text-light font-weight-light"><%= university.full_name %></h6>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="card-text">
                <%= render "universities/university_list", university: university %>
              </div>
            </div>
            <div class="card-footer">
              <%= render "universities/card_footer", university: university %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
      <div class="row mb-3">
        <div class="col">
          <div class="jumbotron mb-3">
            <h1>Маєте ідеї чи побажання?</h1>
            <p class="lead Text-light">Знаєте як покращити наш сервіс? Залиште відгук!</p>
            <a class="btn btn-primary btn-lg" href="https://forms.gle/QuLTXgoKMXbDACGD6">Напишіть нам »</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render "layouts/footer" %>
