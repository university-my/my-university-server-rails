<h1>Groups</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Server ID</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.id %></td>
        <td><%= group.server_id %></td>
        <td><%= group.name %></td>
        <td><%= link_to 'Show', university_group_url(@university.url, group.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

