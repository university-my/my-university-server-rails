<%= content_for(:canonical_link, university_group_url(@university, @group)) %>

<div data-university-url="<%= @university.url %>"></div>
<div data-type="groups"></div>
<div data-id="<%= @group.id %>"></div>

<%= javascript_include_tag 'records' %>

<% meta_tag :description, "Розклад занять #{@university.short_name}, Група " + @group.name %>

<%= render "layouts/navbar", university: @university %>
<p id="notice"><%= notice %></p>

<main class="container custom-padding-top" role="main">
	<p>
		<h1><%= @group.name %></h1>(група)
	</p>
	<p>
		<div id="spinner" class="d-flex justify-content-center">
			<div class="spinner-border text-primary" role="status">
				<span class="sr-only">Loading...</span>
			</div>
		</div>
	</p>
	<div id="records"></div>
</main>
<%= render "layouts/footer" %>