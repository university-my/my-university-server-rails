<% if @records_days %>
<% @records_days.each do |day, records| %>

<% for record in records %>

<table class="table table-sm table-bordered">
	<tbody>

		<tr class="table-active">
			<td scope="row" colspan="2"><%= record.pair_name %> (<%= record.time %>)</td>
		</tr>

		<% if record.name.present? %>
		<tr>
			<td style="width: 10%">Назва</td>
			<td>
				<%= record.name %>
			</td>
		</tr>
		<% end %>

		<% if record.kind.present? %>
		<tr>
			<td style="width: 10%">Тип</td>
			<td>
				<i><%= record.kind %></i>
			</td>
		</tr>
		<% end %>

		<% if record.reason.present? %>
		<tr>
			<td style="width: 10%">Коментар</td>
			<td>
				<%= record.reason %><br>
			</td>
		</tr>
		<% end %>

		<% if record.auditorium %>
		<tr>
			<td style="width: 10%">Аудиторія</td>
			<td>
				<%= link_to university_auditorium_url(university.url, record.auditorium.friendly_id, pair_date: pair_date) do %>
				<%= record.auditorium.name %>
				<% end %>
			</td>
		</tr>
		<% end %>

		<% if record.teacher %>
		<tr>
			<td style="width: 10%">Викладач</td>
			<td>
				<%= link_to university_teacher_url(university.url, record.teacher.friendly_id, pair_date: pair_date) do %>
				<%= record.teacher.name %>
				<% end %>
			</td>
		</tr>
		<% end %>

		<% if record.groups && record.groups.count > 0 %>
		<tr>
			<% if record.groups.count > 1 %>
			<td style="width: 10%">Групи</td>
			<%	else %>
			<td style="width: 10%">Група</td>
			<% end %>
			<td>
				<% for i in 1..record.groups.count do %>
				<%= link_to university_group_url(university.url, record.groups[i-1].friendly_id, pair_date: pair_date) do %>
				<%= record.groups[i-1].name %>
				<% end %>
				<% if i != record.groups.count %>
				<%= ',' %>
				<% end %>
				<% end %>
			</td>
		</tr>
		<% end %>

	</tbody>
</table>
<% end %>

<% end %>
<% end %>
