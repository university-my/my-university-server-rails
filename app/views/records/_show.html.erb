<table>

  <thead>
    <tr>
      <th>Пара/Час</th>
      <th>Назва/Тип/Аудиторія</th>
      <th>Викладач</th>
      <th>Група</th>
    </tr>
  </thead>

  <tbody>
    <% @records_days.each do |day, records| %>

    <tr><th colspan="6"><%= l day, format: "%A, %e %B %Y" %></th></tr>

    <% for record in records %>
    <tr>
      <td align="center"><%= record.pair_name %><br><%= record.time %></td>
      <td align="center"><%= record.name %><br><%= record.kind %><br>
        <% if record.auditorium.nil? == false %>
        <%= link_to(university_auditorium_url(university.url, record.auditorium.id)) do %>
        <%= record.auditorium.name %>
        <% end %>
        <% else %>
        <% end %>
      </td>

      <% if record.teacher.nil? == false %>
      <td>
        <%= link_to(university_teacher_url(university.url, record.teacher.id)) do %>
        <%= record.teacher.name %>
        <% end %>
      </td>
      <% else %>
      <td></td>
      <% end %>

      <% if record.groups.nil? == false %>
      <td>
        <% for i in 1..record.groups.count do %>
        <%= link_to(university_group_url(university.url, record.groups[i-1].id)) do %>
        <%= record.groups[i-1].name %>
        <% end %>
        <% if i != record.groups.count %>
        <%= ',' %>
        <% end %>
        <% end %>
      </td>
      <% else %>
      <td></td>
      <% end %>

    </tr>
    <% end %>

    <% end %>
  </tbody>

</table>

<%= render "records/links" %>