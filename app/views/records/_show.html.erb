
<% @records_days.each do |day, records| %>

<table class="table table-bordered">
	<tbody>
		<tr class="table-secondary"><th scope="row"><%= l day, format: "%A, %e %B %Y" %></th></tr>

		<% for record in records %>
		<tr class="table-active">
			<td scope="row"><%= record.pair_name %> (<%= record.time %>)</td>
		</tr>
		
		<% if record.name.blank? == false && record.kind.blank? %>
		<tr>
			<td>
				<%= record.name %>
			</td>
		</tr>
		<% end %>
		
		<% if record.name.blank? && record.kind.blank? == false %>
		<tr>
			<td>
				<i><%= record.kind %></i>
			</td>
		</tr>
		<% end %>
		
		<% if record.name.blank? == false && record.kind.blank? == false %>
		<tr>
			<td>
				<%= record.name %><br>
				<i><%= record.kind %></i>
			</td>
		</tr>
		<% end %>
		
		<% if record.reason.blank? == false %>
		<tr>
			<td>
				<b>Коментар:</b>
				<%= record.reason %><br>
			</td>
		</tr>
		<% end %>
		
		<% if record.auditorium.nil? == false %>
		<tr>
			<td>
				Аудиторія:
				<%= link_to(university_auditorium_url(university.url, record.auditorium.id)) do %>
				<%= record.auditorium.name %>
				<% end %>
			</td>
		</tr>
		<% end %>

		<% if record.teacher.nil? == false %>
		<tr>
			<td>
				Викладач:
				<%= link_to(university_teacher_url(university.url, record.teacher.id)) do %>
				<%= record.teacher.name %>
				<% end %>
			</td>
		</tr>
		<% end %>
		
		<% if record.groups.nil? == false && record.groups.count > 0 %>
		<tr>
			<td>
				<% if record.groups.count > 1 %>
				Групи:
				<%	else %>
				Група:
				<% end %>
				<% for i in 1..record.groups.count do %>
				<%= link_to(university_group_url(university.url, record.groups[i-1].id)) do %>
				<%= record.groups[i-1].name %>
				<% end %>
				<% if i != record.groups.count %>
				<%= ',' %>
				<% end %>
				<% end %>
			</td>
		</tr>
		<% end %>
		
		<% end %>
		
	</tbody>
</table>
<br>

<% end %>
