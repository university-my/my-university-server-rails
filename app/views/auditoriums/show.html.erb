<div data-university-url="<%= @university.url %>"></div>
<div data-type="auditoriums"></div>
<div data-id="<%= @auditorium.id %>"></div>
<div data-pair-date="<%= @pair_date %>"></div>

<%= javascript_include_tag 'records' %>

<% meta_tag :keywords, "Розклад, #{@university.short_name}, Аудиторія, #{@auditorium.name}" %>
<% meta_tag :description, "Розклад занять #{@university.short_name}, Аудиторія " + @auditorium.name %>
<% @title = "#{@university.short_name} - #{@auditorium.name}" %>
<%= content_for(:canonical_link, university_auditorium_url(@university.url, @auditorium)) %>

<%= render "layouts/navbar", university: @university %>
<p id="notice"><%= notice %></p>

<main class="container" role="main">
	<div class="mb-3">
		<h1><%= @auditorium.name %></h1>
	</div>
	<%= render "layouts/datepicker", pair_date: @pair_date %>
	<div id="spinner" class="d-flex justify-content-center min-vh-100">
		<div class="spinner-border text-primary" role="status">
			<span class="sr-only">Loading...</span>
		</div>
	</div>
	<div id="records"></div>
	<%= render "layouts/source_site" %>
</main>
<%= render "layouts/footer" %>
