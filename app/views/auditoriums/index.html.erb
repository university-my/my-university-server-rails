<% meta_tag :description, "Розклад занять #{@university.short_name}, Аудиторії" %>
<% meta_tag :keywords, 'Аудиторії, #{@university.short_name},Розклад,Мій Університет,My University' %>

<%= render "layouts/navbar" %>

<p id="notice"><%= notice %></p>

<main class="container custom-padding-top" role="main">

	<h1>Аудиторії</h1>

	<table class="table table-striped">
		<tbody>
			<% @auditoriums.each do |auditorium| %>
			<tr>
				<td><%= auditorium.name %></td>
				<td><%= link_to 'Показати', university_auditorium_url(@university.url, auditorium.id) %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</main>
<%= render "layouts/footer" %>