<% meta_tag :description, "Розклад занять #{@university.short_name}, Аудиторії" %>
<% meta_tag :keywords, 'Аудиторії, #{@university.short_name},Розклад,Мій Університет,My University' %>

<%= render "layouts/navbar" %>

<p id="notice"><%= notice %></p>

<main class="container" role="main">

	<h1 class="mb-4"><%= octicon "sign-in", height: 32, width: 32 %> Аудиторії</h1>

	<% if @university.url == University.khnue_url %>
	<% @buildings.each do |building| %>
	<h5><%= building.name %></h5>
	<table class="table table-sm table-striped">
		<tbody>
			<% building.auditoriums.each do |auditorium| %>
			<tr>
				<td><%= link_to auditorium.name, university_auditorium_url(@university.url, auditorium.friendly_id) %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<% end %>
	<% else %>
	<table class="table table-sm table-striped">
		<tbody>
			<% @auditoriums.each do |auditorium| %>
			<tr>
				<td><%= link_to auditorium.name, university_auditorium_url(@university.url, auditorium.friendly_id) %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<% end %>

	<div class="container">
		<div class="row">
			<% if @university.url == 'sumdu' %>
			<p class="text-muted font-weight-lighter"><small>Інформація про аудиторії із сайту schedule.sumdu.edu.ua</small></p>
			<% end %>
		</div>
	</div>

</main>
<%= render "layouts/footer" %>
