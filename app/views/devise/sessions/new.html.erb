<main class="container" role="main">
  <div class="text-center mt-5">
    <h1 class="h3 mb-3 font-weight-normal">Вхід</h1>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-signin'}) do |f| %>
    <div class="field">
      <%= f.label :email, class: "sr-only", for: "inputEmail" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Адреса електронної пошти", id: "inputEmail" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "sr-only", for: "inputPassword" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Пароль", id: "inputPassword" %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Увійти", class: "btn btn-lg btn-primary btn-block" %>
    </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</main>