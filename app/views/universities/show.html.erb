<% meta_tag :description, "Розклад занять #{@university.short_name}" %>
<% meta_tag :keywords, "Розклад,#{@university.short_name},#{@university.full_name},Мій Університет,My University" %>
<%= content_for(:canonical_link, university_url(@university)) %>
<% @title = "Розклад #{@university.short_name}" %>

<%= render "layouts/header" %>

<p id="notice"><%= notice %></p>

<main class="container" role="main">

  <div class="card mb-3">
    <div class="card-body">
      <h1 class="card-title display-5">Розклад <%= @university.short_name %></h1>
        <h6 class="card-subtitle mb-2 Text-light font-weight-lighter"><%= @university.full_name %></h6>

        <div class="card-text" style="max-width: 160px;">
          <ul class="list-group list-group-flush">
            <li class="list-group-item border-0">
              <%= octicon "organization", height: 24, width: 24, class: "align-middle" %>
              <span class="align-middle"><%= link_to 'Групи', university_groups_url(@university.url), class: "align-middle ml-2" %></span>
            </li>

            <li class="list-group-item border-0">
              <%= octicon "briefcase", height: 24, width: 24, class: "align-middle" %>
              <%= link_to 'Викладачі', university_teachers_url(@university.url), class: "align-middle ml-2" %>
            </li>

            <% if @university.url != University.kpi_url %>
            <li class="list-group-item border-0">
              <%= octicon "sign-in", height: 24, width: 24, class: "align-middle" %>
              <%= link_to 'Аудиторії', university_auditoriums_url(@university.url), class: "align-middle ml-2" %>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="card-footer">
        <% if @university.url == University.sumdu_url %>
        <p class="text-muted font-weight-lighter"><small>Інформація про аудиторії, викладачів та групи із сайту schedule.sumdu.edu.ua</small></p>
        <% elsif @university.url == University.kpi_url %>
        <p class="text-muted font-weight-lighter"><small>Інформація про викладачів та групи із сайту rozklad.org.ua</small></p>
        <% elsif @university.url == University.khnue_url %>
        <p class="text-muted font-weight-lighter"><small>Інформація про аудиторії, викладачів та групи із сайту hneu.edu.ua</small></p>
        <% end %>
      </div>
    </div>

  </main>
  <%= render "layouts/footer" %>
