<% meta_tag :description, "#{@university.full_name} - зручний розклад занять" %>
<% meta_tag :keywords, "Розклад,Расписание,#{@university.short_name},#{@university.full_name}" %>
<%= content_for(:canonical_link, university_url(@university.url)) %>
<% @title = "Розклад #{@university.short_name} - #{I18n.l(DateTime.now, format: '%B %Y')}" %>

<%= render "layouts/header" %>

<main class="container" role="main">
  <div class="mx-auto col-md-8">
    <div class="card mb-3">
      <div class="card-header">
        <div class="media">
          <%= render "universities/university_picture", university: @university %>
          <div class="media-body">
            <h1 class="mt-0">Розклад <%= @university.short_name %><% if @university.is_beta %><span class="text-warning"> (бета-версія)</span><% end %></h1>
            <h6 class="card-subtitle mb-2 Text-light font-weight-light"><%= @university.full_name %></h6>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="card-text">
          <%= render "universities/university_list", university: @university %>
        </div>
      </div>
      <div class="card-footer">
        <p class="text-muted font-weight-lighter"><small><%= @university.description %></small></p>
      </div>
    </div>
  </div>
</main>
<%= render "layouts/footer" %>
