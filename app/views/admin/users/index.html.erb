<main role="main">
  <div class="container pt-4">
    <div class="row">
      <div class="col">
        <h1>Користувачі</h1>
        <div class="table-responsive">
          <table class="table table-sm">
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><span class="font-weight-normal"><%= user.email %></span></td>
                <td><%= link_to 'Показати', [:admin, user] %></td>
                <td><%= link_to 'Редагувати', edit_admin_user_path(user) %></td>
                <td><%= link_to 'Видалити', [:admin, user], method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <%= link_to 'Новий користувач', new_admin_user_path %>
      </div>
    </div>
  </div>
</main>
<%= render "admin/navbar" %>