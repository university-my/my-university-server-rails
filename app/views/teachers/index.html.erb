<% meta_tag :description, "Розклад занять #{@university.short_name}, Викладачі" %>
<% meta_tag :keywords, "Викладачі, #{@university.short_name},Розклад" %>
<% @title = "#{@university.short_name} - Викладачі" %>
<%= content_for(:canonical_link, university_teachers_url(@university.url)) %>
<% no_index %>

<%= render "layouts/navbar" %>

<p id="notice"><%= notice %></p>

<main class="container" role="main">
	<div class="mx-auto col-md-8">
		<h1 class="mb-4"><%= octicon "briefcase", height: 32, width: 32 %> Викладачі</h1>
		<div class="row">
			<div class="col mb-4 mr-0 ml-0">
				<div class="card">
					<ul class="list-group list-group-flush">
						<% @teachers.each do |teacher| %>
						<li class="list-group-item"><%= link_to teacher.name, university_teacher_url(@university.url, teacher.friendly_id) %></li>
						<% end %>
					</ul>
				</div>
				<div class="mt-4"><%= will_paginate @teachers, :page_links => false, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, list_classes: %w(pagination justify-content-center) %></div>
				<div class="container">
					<div class="row">
						<% if @university.url == 'sumdu' %>
						<p class="text-muted font-weight-lighter"><small>Інформація про викладачів із сайту schedule.sumdu.edu.ua</small></p>
						<% elsif @university.url == 'kpi' %>
						<p class="text-muted font-weight-lighter"><small>Інформація про викладачів із сайту rozklad.org.ua</small></p>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</main>
<%= render "layouts/footer" %>
