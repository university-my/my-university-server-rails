<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @teacher.name %>
</p>

<%= link_to 'Back', teachers_path %>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Pair</th>
      <th>Name</th>
      <th>Kind</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teacher.records.each do |record| %>
      <tr>
        <td><%= record.start_date %></td>
        <td><%= record.pair_name %></td>
        <td><%= record.name %></td>
        <td><%= record.kind %></td>
        <td><%= record.time %></td>
      </tr>
    <% end %>
  </tbody>
</table>