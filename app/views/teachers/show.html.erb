<%= content_for(:canonical_link, university_teacher_url(@university.url, @teacher)) %>

<div data-university-url="<%= @university.url %>"></div>
<div data-type="teachers"></div>
<div data-id="<%= @teacher.id %>"></div>
<div data-pair-date="<%= @pair_date %>"></div>

<%= javascript_include_tag 'records' %>

<% meta_tag :description, "Розклад занять #{@university.short_name}, Викладач - " + @teacher.name %>

<%= render "layouts/navbar", university: @university %>
<p id="notice"><%= notice %></p>

<main class="container custom-padding-top" role="main">
	<p>
		<h1><%= @teacher.name %></h1>(Викладач)
	</p>
	<%= render "layouts/datepicker", pair_date: @pair_date %>
	
	<div class="row justify-content-md-center">
		<div class="col-md-auto">

			<%
			nextDate = @pair_date.to_date + 1.day
			previousDate = @pair_date.to_date - 1.day
			%>

			<div class="btn-toolbar" role="toolbar">
				<div class="btn-group mr-2" role="group">
					<form action="" method="get">
						<input type="date" id="start" name="pair_date"
						value="<%= previousDate %>" hidden>
						<input type="submit" class="btn btn-outline-primary" value="<%= l previousDate, format: "%A, %e %B" %>">
					</form>
				</div>
				<div class="btn-group mr-2" role="group">
					<form action="" method="get">
						<input type="date" id="start" name="pair_date"
						value="<%= nextDate %>" hidden>
						<input type="submit" class="btn btn-outline-primary" value="<%= l nextDate, format: "%A, %e %B" %>">
					</form>
				</div>
			</div>
		</div>
	</div>
	
<div id="spinner" class="d-flex justify-content-center mt-5">
		<div class="spinner-border text-primary" role="status">
			<span class="sr-only">Loading...</span>
		</div>
		<div style="height:300px;"></div>
	</div>

	<div id="records" class="mt-4"></div>
	<%= render "layouts/source_site" %>
</main>
<%= render "layouts/footer" %>